<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qyu4.theallswap.View.CreateTrade">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/friends_items"
            android:id="@+id/t_friends_items"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lv_friends_items"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:clickable="true"
            android:choiceMode="singleChoice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/your_items"
            android:id="@+id/t_your_items"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lv_your_items"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:clickable="true"
            android:choiceMode="singleChoice"
            android:drawSelectorOnTop="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/offer_trade"
            android:id="@+id/b_offer_trade"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/reset_selection"
            android:id="@+id/b_reset_selection"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
