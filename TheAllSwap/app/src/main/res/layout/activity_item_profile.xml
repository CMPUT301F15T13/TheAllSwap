<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qyu4.theallswap.View.ItemProfile">

    <TextView
        android:id="@+id/new_patient_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/new_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_quantity"
        android:layout_below="@+id/current_user_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/new_user_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_quality"
        android:layout_below="@+id/current_user_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_category"
        android:id="@+id/textView3"
        android:layout_below="@+id/current_user_city"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_privacy"
        android:id="@+id/textView4"
        android:layout_below="@+id/assigned_category"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_comment"
        android:id="@+id/textView5"
        android:layout_below="@+id/assigned_privacy"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/current_user_name"
        android:layout_below="@+id/new_patient_id_label"
        android:layout_alignParentStart="true"
        android:hint="Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/current_user_email"
        android:layout_below="@+id/new_user_email"
        android:layout_alignParentStart="true"
        android:hint="A number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/current_user_city"
        android:layout_below="@+id/new_user_city"
        android:layout_alignParentStart="true"
        android:hint="Quality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/assigned_category"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:hint="A Category" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/assigned_privacy"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:hint="Yes or No" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/assigned_comments"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:hint="No comments" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_profile_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/remove_item_button"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/edit_profile_button" />

    <ImageView
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_weight="1"
        android:id="@+id/imgView"
        android:background="@android:drawable/ic_menu_gallery"
        android:layout_above="@+id/edit_profile_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:id="@+id/load_picture_button"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/remove_item_button"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
